<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.tuans.hocimagebuttonimageview.MainActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bạn muốn hiển thị hình nào?"
        android:textColor="@color/colorAccent"
        android:textSize="20sp"
        tools:layout_editor_absoluteX="41dp"
        tools:layout_editor_absoluteY="22dp" />

    <RadioGroup
        android:layout_width="143dp"
        android:layout_height="62dp"
        android:layout_marginTop="58dp"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        tools:layout_editor_absoluteX="96dp"
        android:id="@+id/radioGroup">

        <RadioButton
            android:id="@+id/radNha"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Hiển thị nhà"
            tools:layout_editor_absoluteX="197dp"
            tools:layout_editor_absoluteY="162dp" />

        <RadioButton
            android:id="@+id/radEch"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Hiển thị ếch"
            tools:layout_editor_absoluteX="197dp"
            tools:layout_editor_absoluteY="221dp" />
    </RadioGroup>

    <ImageView
        android:id="@+id/imgHinh"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/radioGroup"
        tools:layout_editor_absoluteX="68dp" />

    <ImageButton
        android:id="@+id/btnExit"
        android:layout_width="73dp"
        android:layout_height="62dp"
        app:srcCompat="@drawable/exit"
        tools:layout_editor_absoluteX="277dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        app:layout_constraintVertical_bias="1.0"
        tools:layout_editor_absoluteY="441dp" />

</android.support.constraint.ConstraintLayout>
