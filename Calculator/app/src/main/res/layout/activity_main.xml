<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/gray"
        tools:context=".MainActivity" android:orientation="vertical">

    <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/etShowNumber" android:layout_weight="1" android:text="0" android:gravity="right"
            android:paddingTop="10pt" android:background="@color/gray"
            android:textSize="40sp" android:textColor="@color/whiteText"/>
    <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <TableRow
                android:layout_marginBottom="1pt"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            <Button
                    android:text="AC"
                    android:layout_marginRight="1pt"
                    android:textSize="18sp"
                    android:layout_width="30pt"
                    android:layout_height="30pt" android:id="@+id/button19" android:background="@color/whiteback"
                    android:layout_weight="1"/>
            <Button
                    android:text="+/-"
                    android:layout_marginRight="1pt"
                    android:textSize="18sp"
                    android:layout_width="30pt"
                    android:layout_height="30pt" android:id="@+id/btPlusMinus" android:background="@color/whiteback"
                    android:layout_weight="1"/>
            <Button
                    android:text="%"
                    android:layout_marginRight="1pt"
                    android:textSize="18sp"
                    android:layout_width="30pt"
                    android:layout_height="30pt" android:id="@+id/btPercent" android:background="@color/whiteback"
                    android:layout_weight="1"/>
            <Button
                    android:text="/"
                    android:layout_marginRight="1pt"
                    android:textSize="18sp"
                    android:layout_width="30pt"
                    android:layout_height="30pt" android:id="@+id/btDiv" android:background="@color/buop"
                    android:textColor="@color/whiteText" android:layout_weight="1"/>
        </TableRow>
        <TableRow
                android:layout_marginBottom="1pt"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            <Button
                    android:text="7"
                    android:layout_marginRight="1pt"
                    android:textSize="18sp"
                    android:layout_weight="1"
                    android:layout_width="30pt"
                    android:layout_height="30pt" android:id="@+id/bt7" android:background="@color/whiteback"
                    android:onClick="btNumberEvent"/>
            <Button
                    android:text="8"
                    android:layout_marginRight="1pt"
                    android:textSize="18sp"
                    android:layout_weight="1"
                    android:layout_width="30pt"
                    android:layout_height="30pt" android:id="@+id/bt8" android:background="@color/whiteback"
                    android:onClick="btNumberEvent"/>
            <Button
                    android:text="9"
                    android:layout_marginRight="1pt"
                    android:textSize="18sp"
                    android:layout_weight="1"
                    android:layout_width="30pt"
                    android:layout_height="30pt" android:id="@+id/bt9" android:background="@color/whiteback"
                    android:onClick="btNumberEvent"/>
            <Button
                    android:text="*"
                    android:textSize="18sp"
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="30pt" android:id="@+id/btMul" android:background="@color/buop"
                    android:textColor="@color/whiteText"/>
        </TableRow>
        <TableRow
                android:layout_marginBottom="1pt"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            <Button
                    android:layout_marginRight="1pt"
                    android:layout_weight="1"
                    android:textSize="18sp"
                    android:text="4"
                    android:layout_width="30pt"
                    android:layout_height="30pt" android:id="@+id/bt4" android:background="@color/whiteback"
                    android:onClick="btNumberEvent"/>
            <Button
                    android:layout_marginRight="1pt"
                    android:text="5"
                    android:textSize="18sp"
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="30pt" android:id="@+id/bt5" android:background="@color/whiteback"
                    android:onClick="btNumberEvent"/>
            <Button
                    android:text="6"
                    android:textSize="18sp"
                    android:layout_weight="1"
                    android:layout_width="30pt"
                    android:layout_marginRight="1pt"
                    android:layout_height="30pt" android:id="@+id/bt6" android:background="@color/whiteback"
                    android:onClick="btNumberEvent"/>
            <Button
                    android:text="-"
                    android:textSize="18sp"
                    android:layout_weight="1"
                    android:layout_width="30pt"
                    android:layout_height="30pt" android:id="@+id/btSub"
                    android:background="@color/buop" android:textColor="@color/whiteText"/>
        </TableRow>
        <TableRow
                android:layout_marginBottom="1pt"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            <Button
                    android:layout_weight="1"
                    android:text="1"
                    android:layout_marginRight="1pt"
                    android:textSize="18sp"
                    android:layout_width="30pt"
                    android:layout_height="30pt" android:id="@+id/bt1" android:background="@color/whiteback"
                    android:onClick="btNumberEvent"/>
            <Button
                    android:layout_weight="1"
                    android:text="2"
                    android:layout_marginRight="1pt"
                    android:textSize="18sp"
                    android:layout_width="30pt"
                    android:layout_height="30pt" android:id="@+id/bt2" android:background="@color/whiteback"
                    android:onClick="btNumberEvent"/>
            <Button
                    android:layout_weight="1"
                    android:text="3"
                    android:layout_marginRight="1pt"
                    android:textSize="18sp"
                    android:layout_width="30pt"
                    android:layout_height="30pt" android:id="@+id/bt3" android:background="@color/whiteback"
                    android:onClick="btNumberEvent"/>
            <Button
                    android:layout_weight="1"
                    android:text="+"
                    android:textSize="18sp"
                    android:layout_width="30pt"
                    android:layout_height="30pt" android:id="@+id/btPlus" android:background="@color/buop"
                    android:textColor="@color/whiteText"/>
        </TableRow>
    </TableLayout>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:layout_weight="0">
        <Button
                android:text="0"
                android:layout_marginRight="1pt"
                android:textSize="18sp"
                android:layout_width="60pt"
                android:layout_height="30pt" android:id="@+id/bt0" android:layout_weight="1"
                android:background="@color/whiteback" android:onClick="btNumberEvent"/>
        <Button
                android:text="."
                android:layout_marginRight="1pt"
                android:textSize="18sp"
                android:layout_width="30pt"
                android:layout_height="30pt" android:id="@+id/btDot" android:layout_weight="1"
                android:background="@color/whiteback"/>
        <Button
                android:text="="
                android:textSize="18sp"
                android:layout_width="30pt"
                android:layout_height="30pt" android:id="@+id/btEqual" android:layout_weight="1"
                android:background="@color/buop" android:textColor="@color/whiteText"/>
    </LinearLayout>
</LinearLayout>