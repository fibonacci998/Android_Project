<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.tuans.hoccheckbox.MainActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:text="Bạn thích môn học nào?"
        android:textColor="@color/colorAccent"
        android:textSize="30sp"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="40dp" />

    <CheckBox
        android:id="@+id/chk1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Lập trình Android"
        tools:layout_editor_absoluteX="31dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <CheckBox
        android:id="@+id/chk2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:checked="false"
        android:duplicateParentState="false"
        android:text="Lập trình Windown"
        tools:layout_editor_absoluteX="31dp"
        android:layout_marginTop="15dp"
        app:layout_constraintTop_toBottomOf="@+id/chk1" />

    <CheckBox
        android:id="@+id/chk3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Lập trình IOS"
        tools:layout_editor_absoluteX="31dp"
        android:layout_marginTop="14dp"
        app:layout_constraintTop_toBottomOf="@+id/chk2" />

    <Button
        android:id="@+id/btnChon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Chọn môn học"
        tools:layout_editor_absoluteX="127dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/chk3" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="368dp"
        android:layout_height="41dp"
        android:background="@android:color/holo_green_light"
        android:text="Các môn bạn đăng kí học là:"
        android:textSize="20sp"
        tools:layout_editor_absoluteX="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/btnChon" />

    <TextView
        android:id="@+id/txtMonHoc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Các môn học sẽ hiển thị ở đây"
        tools:layout_editor_absoluteX="31dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

</android.support.constraint.ConstraintLayout>
