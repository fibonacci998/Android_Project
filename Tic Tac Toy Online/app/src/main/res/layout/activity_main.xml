<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10pt"
        tools:context=".MainActivity" android:orientation="vertical">
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:hint="Email"
                android:ems="10"
                android:id="@+id/editText" android:layout_weight="1"/>
        <Button
                android:text="Request"
                android:layout_marginLeft="3pt"
                android:background="@color/blue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/btRequest"
                android:layout_weight="1"/>
        <Button
                android:layout_marginLeft="3pt"
                android:text="Accept"
                android:background="@color/darkgreen"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/btAccept" android:layout_weight="1"/>
    </LinearLayout>
    <TableLayout android:gravity="center"
                 android:layout_width="match_parent"
                 android:layout_height="match_parent">
        <TableRow
                android:layout_marginBottom="3pt"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            <Button
                    android:layout_marginRight="3pt"
                    android:layout_width="40pt"
                    android:layout_height="40pt" android:id="@+id/bt1" android:onClick="btClick"/>
            <Button
                    android:layout_marginRight="3pt"
                    android:layout_width="40pt"
                    android:layout_height="40pt" android:id="@+id/bt2" android:onClick="btClick"/>
            <Button
                    android:layout_marginRight="3pt"
                    android:layout_width="40pt"
                    android:layout_height="40pt" android:id="@+id/bt3" android:onClick="btClick"/>
        </TableRow>
        <TableRow
                android:layout_marginBottom="3pt"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            <Button
                    android:layout_marginRight="3pt"
                    android:layout_width="40pt"
                    android:layout_height="40pt" android:id="@+id/bt4" android:onClick="btClick"/>
            <Button
                    android:layout_marginRight="3pt"
                    android:layout_width="40pt"
                    android:layout_height="40pt" android:id="@+id/bt5" android:onClick="btClick"/>
            <Button
                    android:layout_marginRight="3pt"
                    android:layout_width="40pt"
                    android:layout_height="40pt" android:id="@+id/bt6" android:onClick="btClick"/>
        </TableRow>
        <TableRow
                android:layout_marginBottom="3pt"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            <Button
                    android:layout_marginRight="3pt"
                    android:layout_width="40pt"
                    android:layout_height="40pt" android:id="@+id/bt7" android:onClick="btClick"/>
            <Button
                    android:layout_marginRight="3pt"
                    android:layout_width="40pt"
                    android:layout_height="40pt" android:id="@+id/bt8" android:onClick="btClick"/>
            <Button
                    android:layout_marginRight="3pt"
                    android:layout_width="40pt"
                    android:layout_height="40pt" android:id="@+id/bt9" android:onClick="btClick"/>
        </TableRow>
    </TableLayout>
</LinearLayout>