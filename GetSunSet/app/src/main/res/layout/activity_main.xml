<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray"

    tools:context=".MainActivity">
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:background="@drawable/background"
            android:id="@+id/etCityName" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="152dp"
            app:layout_constraintTop_toTopOf="parent"
            android:hint="Enter city name" android:textAlignment="center"/>
    <Button
            android:text="Get Data"
            android:background="@drawable/button_blue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btGetData" app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp" android:layout_marginTop="116dp"
            app:layout_constraintTop_toBottomOf="@+id/tvData" app:layout_constraintHorizontal_bias="0.498"
            android:onClick="getData"/>
    <TextView
            android:text="----------"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvData" app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp" android:layout_marginTop="120dp"
            app:layout_constraintTop_toBottomOf="@+id/etCityName" android:textSize="30sp"/>
</android.support.constraint.ConstraintLayout>