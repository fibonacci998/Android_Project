<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <TextView
        android:id="@+id/tvRelativeTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="23dp"
        android:text="Login form"
        android:textSize="20dp"
        android:textColor="#0000FF"

        />

    <TextView
        android:id="@+id/tvUsr2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/tvRelativeTitle"
        android:layout_marginStart="15dp"
        android:layout_marginTop="39dp"
        android:text="Username"
        android:textSize="16dp"
        />

    <EditText
        android:id="@+id/edtUsr2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/tvUsr2"
        android:layout_toEndOf="@+id/tvUsr2"
        android:ems="10"
        android:inputType="textPersonName"
        tools:text="enter name"
        android:textSize="16dp"
        android:layout_marginEnd="20dp"
        />

    <TextView
        android:id="@+id/tvPass2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/tvUsr2"
        android:layout_below="@+id/tvUsr2"
        android:layout_marginTop="25dp"
        android:text="Password"
        android:textSize="16dp"
        />

    <EditText
        android:id="@+id/edtPass2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/tvPass2"
        android:layout_toEndOf="@+id/tvPass2"
        android:ems="10"
        android:hint="enter password"
        android:inputType="textPassword"
        android:textSize="16dp"
        android:layout_marginEnd="20dp"
        />

    <CheckBox
        android:id="@+id/chkSaveLogin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/tvPass2"
        android:layout_below="@+id/tvPass2"
        android:layout_marginTop="14dp"
        android:text="Save login information"
        android:textSize="16dp"
        />

    <Button
        android:id="@+id/btnCheckLogin2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/chkSaveLogin"
        android:layout_below="@+id/chkSaveLogin"
        android:layout_marginTop="15dp"
        android:text="Check login"
        android:textSize="16dp"
        />

    <Button
        android:id="@+id/btnReset"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/btnCheckLogin2"
        android:layout_toEndOf="@+id/btnCheckLogin2"
        android:text="Reset"
        android:textSize="16dp"
        android:layout_marginEnd="20dp"
        />
</RelativeLayout>